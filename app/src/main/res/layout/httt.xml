<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HTTT"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/header_register"
        android:elevation="10dp"
        android:theme="@style/ToolbarTheme" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="133dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/iconmaybay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Lựa Chọn Hình Thức Thanh Toán"
            android:textColor="@color/colorBlue"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_tttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgot"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignRight="@+id/cv"
        android:layout_margin="10dp"
        android:background="@drawable/bt_uiborder"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Thanh Toán Trực Tiếp"
        android:textColor="@color/colorPurple"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btn_ttairpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgot"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignRight="@+id/cv"
        android:layout_margin="10dp"
        android:background="@drawable/bt_uiborder"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Thanh Toán Qua AirPay"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_ttquathe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgot"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignRight="@+id/cv"
        android:layout_margin="10dp"
        android:background="@drawable/bt_uiborder"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Thanh Toán Qua Thẻ"
        android:textColor="@color/green_400"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_back4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/bt_signup"
        android:text="Quay Lại"
        android:textStyle="bold" />

</LinearLayout>
